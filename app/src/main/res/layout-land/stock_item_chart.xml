<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryBackground"
        android:layout_margin="@dimen/dimen_normal">

        <RelativeLayout
            android:padding="@dimen/dimen_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/vertical_buttons"
                layout="@layout/vertical_button_group"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/stock_chart"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/vertical_buttons"
                android:layout_toStartOf="@id/vertical_buttons"
                android:contentDescription="@string/stock_chart_description"
                android:layout_marginRight="@dimen/dimen_normal"
                android:layout_marginEnd="@dimen/dimen_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>